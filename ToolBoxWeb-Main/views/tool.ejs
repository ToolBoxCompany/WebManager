<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= tool.nameTool %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#"><i class="fas fa-tools"></i> ToolBox</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
              <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
              <li class="nav-item"><a class="nav-link" href="/catalog">Herramientas</a></li>
              <li class="nav-item"><a class="nav-link" href="#como-funciona">Cómo Funciona</a></li>
              <li class="nav-item"><a class="nav-link" href="/contacto">Contacto</a></li>
              <li class="nav-item"><button class="nav-link btn" data-bs-toggle="modal" data-bs-target="#loginModal">Iniciar Sesión</button></li>
          </ul>
      </div>
    </div>
  </nav>


  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">Tool Interchange</a>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row">
      <!-- imagen -->
      <div class="col-md-6 text-center">
        <img src="/images/<%= tool.nameTool %>.jpg" alt="<%= tool.nameTool %>" class="img-fluid rounded shadow-sm">
      </div>

      <!-- herramienta info -->
      <div class="col-md-6">
        <h1 class="mb-3"><%= tool.nameTool %></h1>
        <span class="badge bg-success mb-2">Disponible</span>
        <span class="badge bg-info mb-2 ms-1"><%= tool.nameCategory %></span>

        <h4 class="text-primary mt-3">€<%= tool.pricePerDay %> / día</h4>

        <p class="mt-4"><strong>Stock disponible:</strong> <%= tool.stock %></p>
        <p><strong>Categoría:</strong> <%= tool.nameCategory %></p>
        <p><strong>Publicado por:</strong> <%= tool.nameUser %></p>

        <button class="btn btn-success mt-4">Reservar herramienta</button>
        <br>
        <a href="/catalog" class="btn btn-outline-secondary mt-3">← Volver al catálogo</a>
      </div>
    </div>

    <!-- reseñas -->
    <div class="row mt-5">
      <div class="col-12">
        <h3>Valoraciones</h3>
        <% if (tool.reviews && tool.reviews.length > 0) { %>
          <% tool.reviews.forEach(review => { %>
            <div class="border p-3 mb-3 rounded bg-light">
              <div>
                <% for (let i = 1; i <= 5; i++) { %>
                  <span class="star"><%= i <= parseInt(review.mark) ? '★' : '☆' %></span>
                <% } %>
              </div>
              <% if (review.comment) { %>
                <p class="mb-0"><%= review.comment %></p>
              <% } else { %>
                <p class="text-muted fst-italic mb-0">Sin comentario</p>
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">Esta herramienta aún no tiene valoraciones.</p>
        <% } %>
      </div>
    </div>
  </div>

</body>
</html>
